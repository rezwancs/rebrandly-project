{{ 'custom-info-section.css' | asset_url | stylesheet_tag }}

<div class="custom-info-section" style="
  background-color: {{ section.settings.background_color }};
  padding: {{ section.settings.section_padding_top }}px {{ section.settings.section_padding_horizontal }}px {{ section.settings.section_padding_bottom }}px {{ section.settings.section_padding_horizontal }}px;
">
  <!-- 3-Part Headline -->
  {% if section.settings.headline_part1 != blank or section.settings.headline_part2 != blank or section.settings.headline_part3 != blank %}
    <div class="custom-info-headline" style="
      text-align: {{ section.settings.headline_alignment }};
      margin-bottom: {{ section.settings.headline_margin_bottom }}px;
    ">
      {% if section.settings.headline_part1 != blank %}
        <span class="headline-part-1" style="
          color: {{ section.settings.headline_part1_color }};
          font-size: {{ section.settings.headline_part1_font_size }}px;
          font-weight: {{ section.settings.headline_part1_font_weight }};
          margin-right: {{ section.settings.headline_spacing }}px;
        ">
          {{ section.settings.headline_part1 }}
        </span>
      {% endif %}
      
      {% if section.settings.headline_part2 != blank %}
        <span class="headline-part-2" style="
          color: {{ section.settings.headline_part2_color }};
          font-size: {{ section.settings.headline_part2_font_size }}px;
          font-weight: {{ section.settings.headline_part2_font_weight }};
          margin-right: {{ section.settings.headline_spacing }}px;
        ">
          {{ section.settings.headline_part2 }}
        </span>
      {% endif %}
      
      {% if section.settings.headline_part3 != blank %}
        <span class="headline-part-3" style="
          color: {{ section.settings.headline_part3_color }};
          font-size: {{ section.settings.headline_part3_font_size }}px;
          font-weight: {{ section.settings.headline_part3_font_weight }};
        ">
          {{ section.settings.headline_part3 }}
        </span>
      {% endif %}
    </div>
  {% endif %}

  <div class="custom-info-container container">
    <div class="custom-info-image">
      {% if section.settings.image != blank %}
        <img src="{{ section.settings.image | image_url: width: 400 }}" 
             alt="{{ section.settings.image.alt | escape }}"
             width="400"
             height="auto"
             loading="lazy">
      {% else %}
        <div class="placeholder-image">
          <svg width="100" height="100" viewBox="0 0 100 100" fill="none" xmlns="http://www.w3.org/2000/svg">
            <rect width="100" height="100" fill="#e5e5e5"/>
            <path d="M30 30h40v40H30z" stroke="#999" stroke-width="2" fill="none"/>
          </svg>
        </div>
      {% endif %}
    </div>
    
    <div class="custom-info-content">
      {% if section.settings.heading != blank %}
        <h2 class="custom-info-heading" style="
          color: {{ section.settings.heading_color }};
          font-size: {{ section.settings.heading_font_size }}px;
          font-weight: {{ section.settings.heading_font_weight }};
          margin-bottom: {{ section.settings.heading_margin_bottom }}px;
        ">
          {{ section.settings.heading }}
        </h2>
      {% endif %}
      
      {% if section.settings.content != blank %}
        <div class="custom-info-text" style="
          color: {{ section.settings.text_color }};
          font-size: {{ section.settings.text_font_size }}px;
          line-height: {{ section.settings.text_line_height }};
          margin-bottom: {{ section.settings.text_margin_bottom }}px;
        ">
          {{ section.settings.content }}
        </div>
      {% endif %}
      
      {% if section.settings.link_text != blank and section.settings.link_url != blank %}
        <p class="custom-info-link" style="
          color: {{ section.settings.link_color }};
          font-size: {{ section.settings.link_font_size }}px;
          margin-bottom: {{ section.settings.link_margin_bottom }}px;
        ">
          {{ section.settings.link_text }} 
          <a href="{{ section.settings.link_url }}" 
             style="color: {{ section.settings.link_color }}; text-decoration: underline;">
            {{ section.settings.link_url }}
          </a>
        </p>
      {% endif %}
      
      {% if section.settings.additional_text != blank %}
        <p class="custom-info-additional" style="
          color: {{ section.settings.additional_text_color }};
          font-size: {{ section.settings.additional_text_font_size }}px;
          margin-bottom: {{ section.settings.additional_text_margin_bottom }}px;
        ">
          {{ section.settings.additional_text }}
        </p>
      {% endif %}
      
      <div class="custom-info-buttons">
        {% if section.settings.button1_text != blank %}
          <a href="{{ section.settings.button1_url | default: '#' }}" 
             class="custom-button custom-button-1"
             style="
               background-color: {{ section.settings.button1_bg_color }};
               color: {{ section.settings.button1_text_color }};
               font-size: {{ section.settings.button1_font_size }}px;
               font-weight: {{ section.settings.button1_font_weight }};
               padding: {{ section.settings.button1_padding_vertical }}px {{ section.settings.button1_padding_horizontal }}px;
               border-radius: {{ section.settings.button1_border_radius }}px;
             ">
            {{ section.settings.button1_text }}
          </a>
        {% endif %}
        
        {% if section.settings.button2_text != blank %}
          <a href="{{ section.settings.button2_url | default: '#' }}" 
             class="custom-button custom-button-2"
             style="
               background-color: {{ section.settings.button2_bg_color }};
               color: {{ section.settings.button2_text_color }};
               font-size: {{ section.settings.button2_font_size }}px;
               font-weight: {{ section.settings.button2_font_weight }};
               padding: {{ section.settings.button2_padding_vertical }}px {{ section.settings.button2_padding_horizontal }}px;
               border-radius: {{ section.settings.button2_border_radius }}px;
               border: {{ section.settings.button2_border_width }}px solid {{ section.settings.button2_border_color }};
             ">
            {{ section.settings.button2_text }}
          </a>
        {% endif %}
      </div>
    </div>
  </div>
</div>

