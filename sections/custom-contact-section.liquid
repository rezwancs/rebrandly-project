{{ 'custom-contact-section.css' | asset_url | stylesheet_tag }}

<div class="custom-contact-section" style="background-color: {{ section.settings.background_color }}; padding: {{ section.settings.section_padding_top }}px 0 {{ section.settings.section_padding_bottom }}px;">
  <div class="container">
    <div class="contact-content">
      <!-- Left Column - Contact Info -->
      <div class="contact-info">
        {% if section.settings.contact_heading != blank %}
          <h2 class="contact-heading" style="color: {{ section.settings.contact_heading_color }}; font-size: {{ section.settings.contact_heading_size }}px;">
            {{ section.settings.contact_heading }}
          </h2>
        {% endif %}
        
        {% if section.settings.contact_description != blank %}
          <p class="contact-description" style="color: {{ section.settings.contact_description_color }}; font-size: {{ section.settings.contact_description_size }}px;">
            {{ section.settings.contact_description }}
          </p>
        {% endif %}

        <!-- Address -->
        {% if section.settings.show_address %}
          <div class="contact-detail">
            <div class="contact-icon">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="{{ section.settings.icon_color }}" stroke-width="2">
                <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                <circle cx="12" cy="10" r="3"></circle>
              </svg>
            </div>
            <div class="contact-text">
              <h4 style="color: {{ section.settings.contact_label_color }}; font-size: {{ section.settings.contact_label_size }}px;">{{ section.settings.address_label }}</h4>
              <p style="color: {{ section.settings.contact_text_color }}; font-size: {{ section.settings.contact_text_size }}px;">{{ section.settings.address_text }}</p>
            </div>
          </div>
        {% endif %}

        <!-- Email -->
        {% if section.settings.show_email %}
          <div class="contact-detail">
            <div class="contact-icon">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="{{ section.settings.icon_color }}" stroke-width="2">
                <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
                <polyline points="22,6 12,13 2,6"></polyline>
              </svg>
            </div>
            <div class="contact-text">
              <h4 style="color: {{ section.settings.contact_label_color }}; font-size: {{ section.settings.contact_label_size }}px;">{{ section.settings.email_label }}</h4>
              <p style="color: {{ section.settings.contact_text_color }}; font-size: {{ section.settings.contact_text_size }}px;">{{ section.settings.email_text }}</p>
            </div>
          </div>
        {% endif %}

        <!-- Logo -->
        {% if section.settings.show_logo and section.settings.logo != blank %}
          <div class="contact-logo">
            <img src="{{ section.settings.logo | image_url: width: section.settings.logo_width }}" alt="{{ section.settings.logo.alt | default: shop.name }}" width="{{ section.settings.logo_width }}" height="auto" />
          </div>
        {% endif %}
      </div>

      <!-- Right Column - Contact Form -->
      <div class="contact-form-wrapper" style="background-color: {{ section.settings.form_background_color }};">
        {% if section.settings.form_heading != blank %}
          <h2 class="form-heading" style="color: {{ section.settings.form_heading_color }}; font-size: {{ section.settings.form_heading_size }}px;">
            {{ section.settings.form_heading }}
          </h2>
        {% endif %}

        {% form 'contact', class: 'contact-form' %}
          {% if form.posted_successfully? %}
            <div class="form-success" style="background-color: {{ section.settings.success_bg_color }}; color: {{ section.settings.success_text_color }};">
              {{ section.settings.success_message | default: 'Thank you for contacting us.' }}
            </div>
          {% endif %}

          {% if form.errors %}
            <div class="form-errors" style="background-color: {{ section.settings.error_bg_color }}; color: {{ section.settings.error_text_color }};">
              {{ form.errors | default_errors }}
            </div>
          {% endif %}

          <div class="form-group">
            <label for="ContactFormName" style="color: {{ section.settings.form_label_color }}; font-size: {{ section.settings.form_label_size }}px;">{{ section.settings.name_label | default: 'Name' }}</label>
            <input type="text" id="ContactFormName" name="contact[name]" value="{% if form.name %}{{ form.name }}{% endif %}" style="background-color: {{ section.settings.form_input_bg_color }}; border-color: {{ section.settings.form_input_border_color }}; color: {{ section.settings.form_input_text_color }};" required>
          </div>

          <div class="form-group">
            <label for="ContactFormEmail" style="color: {{ section.settings.form_label_color }}; font-size: {{ section.settings.form_label_size }}px;">{{ section.settings.email_form_label | default: 'Email' }}</label>
            <input type="email" id="ContactFormEmail" name="contact[email]" value="{% if form.email %}{{ form.email }}{% endif %}" style="background-color: {{ section.settings.form_input_bg_color }}; border-color: {{ section.settings.form_input_border_color }}; color: {{ section.settings.form_input_text_color }};" required>
          </div>

          <div class="form-group">
            <label for="ContactFormSubject" style="color: {{ section.settings.form_label_color }}; font-size: {{ section.settings.form_label_size }}px;">{{ section.settings.subject_label | default: 'Subject' }}</label>
            <input type="text" id="ContactFormSubject" name="contact[subject]" value="{% if form.subject %}{{ form.subject }}{% endif %}" style="background-color: {{ section.settings.form_input_bg_color }}; border-color: {{ section.settings.form_input_border_color }}; color: {{ section.settings.form_input_text_color }};">
          </div>

          <div class="form-group">
            <label for="ContactFormMessage" style="color: {{ section.settings.form_label_color }}; font-size: {{ section.settings.form_label_size }}px;">{{ section.settings.message_label | default: 'Message' }}</label>
            <textarea id="ContactFormMessage" name="contact[body]" rows="5" style="background-color: {{ section.settings.form_input_bg_color }}; border-color: {{ section.settings.form_input_border_color }}; color: {{ section.settings.form_input_text_color }};" required>{% if form.body %}{{ form.body }}{% endif %}</textarea>
          </div>

          <button type="submit" class="contact-submit-btn" style="background-color: {{ section.settings.button_bg_color }}; color: {{ section.settings.button_text_color }}; font-size: {{ section.settings.button_font_size }}px;">
            {{ section.settings.submit_label | default: 'Send' }}
          </button>
        {% endform %}
      </div>
    </div>
  </div>
</div>

