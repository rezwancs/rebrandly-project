                    <path d="M14.9966 11C14.9966 11.7956 14.6805 12.5587 14.1179 13.1213C13.5553 13.6839 12.7922 14 11.9966 14C11.2009 14 10.4379 13.6839 9.87526 13.1213C9.31265 12.5587 8.99658 11.7956 8.99658 11C8.99658 10.2044 9.31265 9.44129 9.87526 8.87868C10.4379 8.31607 11.2009 8 11.9966 8C12.7922 8 13.5553 8.31607 14.1179 8.87868C14.6805 9.44129 14.9966 10.2044 14.9966 11Z" stroke="#F89A1C" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                    
              </div>
              Address
            </div>
            <p class="custom-footer__contact-text">{{ section.settings.address_text }}</p>
          </div>
        {% endif %}
        
        {% if section.settings.show_email and section.settings.email_text != blank %}
          <div class="custom-footer__contact-item">
            <div class="custom-footer__contact-label">
              <div class="custom-footer__contact-icon">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M2.99658 8L10.8866 13.26C11.2152 13.4793 11.6015 13.5963 11.9966 13.5963C12.3917 13.5963 12.7779 13.4793 13.1066 13.26L20.9966 8M4.99658 19H18.9966C19.527 19 20.0357 18.7893 20.4108 18.4142C20.7859 18.0391 20.9966 17.5304 20.9966 17V7C20.9966 6.46957 20.7859 5.96086 20.4108 5.58579C20.0357 5.21071 19.527 5 18.9966 5H4.99658C4.46615 5 3.95744 5.21071 3.58237 5.58579C3.2073 5.96086 2.99658 6.46957 2.99658 7V17C2.99658 17.5304 3.2073 18.0391 3.58237 18.4142C3.95744 18.7893 4.46615 19 4.99658 19Z" stroke="#F89A1C" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
                    
              </div>
              Email
            </div>
            <p class="custom-footer__contact-text">{{ section.settings.email_text }}</p>
          </div>
        {% endif %}
      </div>
    </div>
  </div>
  
  <!-- Bottom Section -->
  <div class="custom-footer__bottom">
    <div class="container">
      <div class="custom-footer__bottom-content">
        <p class="custom-footer__copyright">
          {{ section.settings.copyright_text | default: '© 2024 Citizen School. All rights reserved.' }}
        </p>
        {% if section.settings.powered_by_text != blank %}
          <a href="{{ section.settings.powered_by_url }}" class="custom-footer__powered" {% if section.settings.powered_by_url != blank %}target="_blank" rel="noopener"{% endif %}>
            {{ section.settings.powered_by_text }}
          </a>
        {% endif %}
      </div>
    </div>
  </div>
</footer>

