            <img src="{{ section.settings.logo | image_url: width: section.settings.logo_width }}" 
                 alt="{{ shop.name }}" 
                 width="{{ section.settings.logo_width }}"
                 height="{{ section.settings.logo_width | divided_by: section.settings.logo.aspect_ratio | round }}"
                 loading="lazy">
        {% endif %}

        <div class="">
            <div class="custom-footer__logo">
                {% if section.settings.logo_text != blank %}
                  <h3 class="custom-footer__logo-text">{{ section.settings.logo_text }}</h3>
                {% endif %}
              </div>
              
              {% if section.settings.tagline != blank %}
                <p class="custom-footer__tagline">{{ section.settings.tagline }}</p>
              {% endif %}
              
