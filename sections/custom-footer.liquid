{% liquid
  assign bg_color = section.settings.background_color | default: '#2563eb'
  assign bg_gradient = section.settings.background_gradient
  assign text_color = section.settings.text_color | default: '#ffffff'
%}

<style>
  .custom-footer {
    {% if bg_gradient != blank %}
      background: {{ bg_gradient }};
    {% else %}
      background-color: {{ bg_color }};
    {% endif %}
    color: {{ text_color }};
    padding: {{ section.settings.padding_top }}px 0 0;
  }

  .custom-footer .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .custom-footer .row {
    display: flex;
    flex-wrap: wrap;
    margin: 0 -15px;
  }

  .custom-footer .col-12 {
    flex: 0 0 100%;
    max-width: 100%;
    padding: 0 15px;
  }

  .custom-footer .col-md-4 {
    flex: 0 0 33.333333%;
    max-width: 33.333333%;
    padding: 0 15px;
  }

  .footer-brand-section {
    display: flex;
    gap: 15px;
  }

  .custom-footer__logo {
    display: flex;
    align-items: center;
    gap: 15px;
    margin-bottom: 15px;
  }

  .custom-footer__logo img {
    width: {{ section.settings.logo_width }}px;
    height: auto;
  }

  .custom-footer__logo-text {
    font-size: {{ section.settings.logo_text_size }}px;
    font-weight: bold;
    color: {{ section.settings.logo_text_color | default: text_color }};
    margin: 0;
  }

  .custom-footer__tagline {
    font-size: {{ section.settings.tagline_size }}px;
    color: {{ section.settings.tagline_color | default: text_color }};
    margin-bottom: 15px;
    line-height: 1.5;
  }

  .custom-footer__social {
    display: flex;
    gap: 8px;
    margin-bottom: 20px;
  }

  .custom-footer__social-icon {
    width: {{ section.settings.social_icon_size }}px;
    height: {{ section.settings.social_icon_size }}px;
    background-color: transparent;
    color: {{ text_color }};
    text-decoration: none;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .custom-footer__social-icon:hover {
    opacity: 0.8;
  }

  .custom-footer__heading {
    font-size: {{ section.settings.heading_size }}px;
    font-weight: bold;
    color: {{ section.settings.heading_color | default: text_color }};
    margin-bottom: 15px;
  }

  .custom-footer__links {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .custom-footer__links li {
    margin-bottom: 8px;
  }

  .custom-footer__links a {
    color: {{ section.settings.link_color | default: text_color }};
    text-decoration: none;
    font-size: {{ section.settings.link_size }}px;
  }

  .custom-footer__links a:hover {
    opacity: 0.8;
  }

  .custom-footer__contact-item {
    margin-bottom: 15px;
  }

  .custom-footer__contact-label {
    font-size: {{ section.settings.contact_label_size }}px;
    font-weight: bold;
    color: {{ section.settings.contact_label_color | default: text_color }};
    margin-bottom: 5px;
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .custom-footer__contact-icon {
    width: {{ section.settings.contact_icon_size | default: 20 }}px;
    height: {{ section.settings.contact_icon_size | default: 20 }}px;
    background-color: transparent;
    display: flex;
    align-items: center;
    justify-content: center;
    color: {{ section.settings.contact_icon_color | default: text_color }};
  }

  .custom-footer__contact-text {
    font-size: {{ section.settings.contact_text_size }}px;
    color: {{ section.settings.contact_text_color | default: text_color }};
    line-height: 1.4;
    margin: 0;
  }

  .custom-footer__bottom .container {
    border-top: 1px solid {{ section.settings.separator_color | default: 'rgba(255, 255, 255, 0.2)' }};
    padding: {{ section.settings.bottom_padding }}px 0;
    margin-top: 30px;
  }

  .custom-footer__bottom-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
  }

  .custom-footer__copyright {
    font-size: {{ section.settings.copyright_size }}px;
    color: {{ section.settings.copyright_color | default: text_color }};
    margin: 0;
  }

  .custom-footer__powered {
    font-size: {{ section.settings.copyright_size }}px;
    color: {{ section.settings.powered_color | default: text_color }};
    text-decoration: none;
  }

  .custom-footer__powered:hover {
    opacity: 0.8;
  }

  /* Mobile Responsive */
  @media (max-width: 768px) {
    .custom-footer .col-md-4 {
      flex: 0 0 100%;
      max-width: 100%;
      margin-bottom: 30px;
    }
    
    .custom-footer .col-md-4:last-child {
      margin-bottom: 0;
    }
    
    .custom-footer__content {
      text-align: center;
    }
    
    .custom-footer__logo {
      justify-content: center;
    }
    
    .custom-footer__social {
      justify-content: center;
    }
    
    .custom-footer__bottom-content {
      flex-direction: column;
      gap: 10px;
      text-align: center;
    }
  }

  @media (max-width: 480px) {
    .custom-footer__logo {
      flex-direction: column;
      text-align: center;
      gap: 10px;
    }
    
    .custom-footer__logo-text {
      font-size: {{ section.settings.logo_text_size | minus: 2 }}px;
    }
    
    .custom-footer__heading {
      font-size: {{ section.settings.heading_size | minus: 2 }}px;
    }
  }
</style>

<footer class="custom-footer">
  <div class="container">
    <div class="row custom-footer__content">
      <!-- Logo and Social Section -->
      <div class="col-12 col-md-4 footer-brand-section">
