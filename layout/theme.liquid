  </head>
  <body class="template-{{ request.page_type | handle }} ">
    <a class="unstyled-link skip-to-content-link button focus-inside" href="#MainContent">
      {{ 'accessibility.skip_to_text' | t }}
    </a>
    <div class="body-wrapper">

      {% unless page.metafields.custom_pages.show_header == false %}
         {% sections 'header-group' %}
      {% endunless %}
     
      <main id="MainContent" class="content-for-layout focus-none" role="main" tabindex="-1">
        {{ content_for_layout }}
      </main>
      {% unless page.metafields.custom_pages.show_footer == false %}
          <div class="footer-group">
            {% sections 'footer-group' %}
          </div>
          {% section 'mobile-dock' %}
      {% endunless %}
    </div>
    {% liquid
      assign popclass = 'quickview-popup'
      if settings.enable_quickview_fullwidth
        assign popclass = 'popup-fullwidth quickview-popup'
      endif
      render 'popup', id: 'quickView', class: popclass, type: 'popup'
      if template != 'cart'
        render 'ajax-cart-drawer'
      endif
      render 'newsletter-popup'
    %}
    <ul hidden>
      <li id="a11y-refresh-page-message">{{ 'accessibility.refresh_page' | t }}</li>
      <li id="a11y-new-window-message">{{ 'accessibility.link_messages.new_window' | t }}</li>
    </ul>
    {% liquid
      if settings.enableScrollToTop
        render 'scroll-top'
      endif
      render 'privacy-banner'
      render 'age-verification'
    %}
    {% if settings.enable_animations %}
      <script>
        document.addEventListener('DOMContentLoaded', function () {
          AOS.init({
            once: true,
          });
          setTimeout(function () {
            if (AOS) {
              AOS.refresh();
            }
          }, 1000);
        });
      </script>
    {% endif %}

<link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css"/>
<script defer type="text/javascript" src="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>
 <script defer type="module" src="{{ 'abz_designer.js' | asset_url }}"></script>
      <script>
      const toggleButton = document.getElementById('toggle-button');
const content = document.querySelector('.content');

toggleButton.addEventListener('click', () => {
    content.classList.toggle('expanded');
    if (content.classList.contains('expanded')) {
        toggleButton.innerText = 'Read Less';
    } else {
        toggleButton.innerText = 'Read More';
    }
});
</script>
  </body>
</html>
